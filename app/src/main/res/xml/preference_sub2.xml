<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/prefs_ua_config_title">
        <EditTextPreference
                android:title="@string/user_agent_title"
                android:summary="@string/user_agent_summary"
                android:key="@string/user_agent_key"
                android:defaultValue="@string/user_agent_default"
                android:inputType="textUri"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
                android:title="@string/ua_thread_count_title"
                android:summary="@string/ua_thread_count_summary"
                android:key="@string/ua_thread_count_key"
                android:defaultValue="@string/ua_thread_count_default"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                app:useSimpleSummaryProvider="false"/>
    </PreferenceCategory>
</PreferenceScreen>